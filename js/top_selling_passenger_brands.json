{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/kang0008/FIT3179assignment2/main/data/top_selling_models2020.csv"},
  "width":"container",
  "height":500,
     "params": [{
    "name": "industry",
    "select": {"type": "point", "fields": ["chasis"]},
    "bind": "legend"
  }],
  "transform":[
      {"filter": {
          "field": "brand", 
          "oneOf": ["Toyota","Mazda","Mitsubishi","Hyundai","Ford","Mitsubishi","Nissan","Isuzu","Volkswagen","BMW","Audi","Holden","Mercedes-Benz"]}
      }],
  "mark": {"type":"bar"},
  "encoding": {
    "y": {
      "field": "brand",
      "type": "nominal",
      "title": null,
      "sort": "-x"
    },
    "x": {
      "aggregate": "sum",
      "field": "Sales",
      "type": "quantitative",
      "sort":"ascending",
      "title":null
    },
    "color":{
      "field":"chasis",
      "scale": {"scheme": "tableau10"},
      "legend":{"orient": "top"},
      "title": "Chasis type"
    },
    "opacity": {
      "condition": {"param": "industry", "value": 1},
      "value": 0.2
    },
    "order":{"field":"chasis"},
    "tooltip":[
      {"field":"chasis", "type":"nominal"},
      {"field":"Sales","type":"quantitative"},
      {"field":"model","type":"nominal"}
    ]
  }
}