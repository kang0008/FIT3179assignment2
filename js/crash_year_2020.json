{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":"container",
    "height": 450,
    "data": {
        "url": "https://raw.githubusercontent.com/kang0008/FIT3179assignment2/main/data/crash_frequency.csv"
    },
    "title": "Crash frequency of 2019-20 in Victoria",
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 20
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "date",
            "timeUnit": "date",
            "type": "ordinal",
            "title": "Day",
            "axis": {
                "labelAngle": 0,
                "format": "%e"
            }
        },
        "y": {
            "field": "date",
            "timeUnit": "month",
            "type": "ordinal",
            "title": "Month",
            "sort": ["Nov","Dec","Jan","Feb","Mar","Apr","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct"]
        },
        "color": {
            "field": "count",
            "aggregate": "max",
            "type": "quantitative",
            "legend": {
                "title": null
            }
        }
    }
  }
  